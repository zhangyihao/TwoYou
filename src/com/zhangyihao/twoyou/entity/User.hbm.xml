<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.zhangyihao.twoyou.entity.User" table="users">
        <id name="id" type="integer">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="username" type="string">
            <column name="username" length="30" not-null="true" />
        </property>
        <property name="email" type="string">
            <column name="email" length="60" not-null="true" />
        </property>
        <property name="password" type="string">
            <column name="password" length="32" not-null="true" />
        </property>
        <property name="isActive" type="integer">
            <column name="isActive" not-null="true" />
        </property>
        <property name="activeCode" type="string">
            <column name="activecode" length="36" not-null="true" />
        </property>
        <property name="activeSendTime" type="java.util.Date">
            <column name="activesendtime" not-null="true" />
        </property>
        <property name="passwordCode" type="string">
            <column name="passwordcode" length="36"/>
        </property>
        <property name="passwordSendTime" type="java.util.Date">
            <column name="passwordsendtime" />
        </property>
        <property name="headImg" type="string">
            <column name="headImg" length="100" />
        </property>
    </class>
</hibernate-mapping>
